---
import Container from '../components/Container.astro';
import BaseLayout from '../layouts/BaseLayout.astro';


import BlogPostPreview from '../components/BlogPostPreview.astro';
import { client } from '../lib/sanityClient.js';
import { allPosts } from '../lib/api.js';
const allPostData = await client.fetch(allPosts);


let title = "Jesse's Dev Daydream";
let description = 'A humble Astronaut‚Äôs guide to the stars of web development.';
let permalink = 'https://essej.dev';

---

<BaseLayout title={title} description={description} permalink={permalink} canonicalURL={Astro.canonicalURL}>
  <Container>









    <div class="cloud c1 "></div>
    <div class="cloud c2 "></div>
    <div class="cloud c3 "></div>
    <div class="cloud c5 "></div>
    <div class="c4 cloud "></div>
    <div class="cloud c6 "></div>
    <div class="balloon h-[28rem] m-0 md:py-8"></div>




    <section
      class="p-4 mt-48 relative s:pt-56 gap-y-4 md:py-56 xl:mt-96 post grid grid-cols-1 md:m-0 md:grid-cols-1 lg:grid-cols-1 xl:grid-cols-2">
      <!-- <p
        class=" text-[#cfff70] hover:text-[#8fde5d] grid grid-flow-row text-center  head font-poppins font-bold sticky underline underline-offset-8">
        Recent Posts</p> -->

      {allPostData.slice(0,4).map((post) =>
      <BlogPostPreview post={post} />)}
    </section>





    <!-- <h1 class="text-5xl font-poppins font-bold">Hello<span class="text-7xl">&#129305;</span>!
            <br>I'm Jesse
          </h1>
          <p class="py-6">The web has came a long way since i've been out of the loop. Journey with me as I dive into
            the fundementals of web devlopment after over a decade of being away.</p>
          <button class="btn btn-primary">Get Started <span class="text-2xl">üõ©Ô∏è</span></button> -->








  </Container>

</BaseLayout>


<style>
  .post {
    z-index: 4;
  }

  .head {
    font-size: 2.75em;
    font-weight: 700;

  }

  .c1 {
    left: 65%;
    top: 15vw;
    -webkit-animation: moveclouds 27s linear infinite;
    -moz-animation: moveclouds 27s linear infinite;
    -o-animation: moveclouds 27s linear infinite
  }

  .c2 {
    left: 35%;
    top: 22vw;
    -webkit-animation: moveclouds 38s linear infinite;
    -moz-animation: moveclouds 38s linear infinite;
    -o-animation: moveclouds 38s linear infinite
  }

  .c3 {
    left: 8%;
    top: 19vw;
    -webkit-animation: moveclouds 30s linear infinite;
    -moz-animation: moveclouds 30s linear infinite;
    -o-animation: moveclouds 30s linear infinite
  }

  .c4 {
    left: 95%;
    top: 30vw;
    z-index: 1;
    -webkit-animation: moveclouds 22s linear infinite;
    -moz-animation: moveclouds 22s linear infinite;
    -o-animation: moveclouds 22s linear infinite
  }

  .c5 {
    left: 82%;
    top: 38vw;
    z-index: 1;
    -webkit-animation: moveclouds 35s linear infinite;
    -moz-animation: moveclouds 35s linear infinite;
    -o-animation: moveclouds 35s linear infinite
  }

  .c6 {
    left: 71%;
    top: 26vw;
    z-index: 1;
    -webkit-animation: moveclouds 22s linear infinite;
    -moz-animation: moveclouds 22s linear infinite;
    -o-animation: moveclouds 22s linear infinite
  }

  .balloon {
    display: block;

    /* https://cdn.sanity.io/images/jm2b1ney/production/b620a9e1213eed22a6674ef09e7a68d5b99a4ae8-427x600.svg */
    margin-bottom: -25vw;
    background-image: url('https://cdn.sanity.io/images/jm2b1ney/production/c279c98f58e8b3bc63e48ed7a3e13be93c2764e6-35x49.svg');
    background-repeat: no-repeat;
    background-size: contain;
    background-position: center;
    margin-top: 25px;
    position: relative;
    animation-name: floating;
    animation-duration: 3s;
    animation-iteration-count: infinite;
    animation-timing-function: ease-in-out;
    /* top: 80vh; */


  }

  .cloud {
    width: 18vw;
    height: 9vw;
    margin-bottom: -9vw;
    background-image: url('https://cdn.sanity.io/images/jm2b1ney/production/4081f48ff15fa914cb4b777c8f448612b37cbe7a-24x13.svg');
    background-repeat: no-repeat;
    background-size: contain;
    background-position: center;
    position: relative;

    /* background-color: white;
    height: 50px;
    width: 200px;
    border-radius: 50px;
    position: absolute; */
  }


  @-webkit-keyframes moveclouds {
    0% {
      margin-left: 0%;
    }

    100% {
      margin-left: -100%;
    }
  }

  @-moz-keyframes moveclouds {
    0% {
      margin-left: 1000px;
    }

    100% {
      margin-left: -1000px;
    }
  }

  @-o-keyframes moveclouds {
    0% {
      margin-left: 1000px;
    }

    100% {
      margin-left: -1000px;
    }
  }

  .floating {
    animation-name: floating;
    animation-duration: 3s;
    animation-iteration-count: infinite;
    animation-timing-function: ease-in-out;
    margin-left: 30px;
    margin-top: 5px;
  }

  @keyframes floating {
    from {
      transform: translate(0, 0px);
    }

    65% {
      transform: translate(0, 15px);
    }

    to {
      transform: translate(0, -0px);
    }
  }
</style>