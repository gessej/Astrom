---
import Container from '../components/Container.astro';
import BaseLayout from '../layouts/BaseLayout.astro';
let title = "Jesse's Dev Daydream";
let description = 'A humble Astronaut’s guide to the stars of web development.';
let permalink = 'https://essej.dev';
---

<BaseLayout title={title} description={description} permalink={permalink} canonicalURL={Astro.canonicalURL}>
  <Container>
    <div class="hero min-h-screen bg-base-200">
      <div class="hero-content text-center">
        <div class="max-w-sm">
          <h1 class="text-5xl font-bold">Hello<span class="text-7xl">&#129305;</span>!
            <br>I'm Jesse
          </h1>
          <p class="py-6">The web has came a long way since i've been out of the loop. Journey with me as I dive into
            the fundementals of web devlopment after over a decade of being away.</p>
          <button class="btn btn-primary">Get Started <span class="text-2xl">🛩️</span></button>
        </div>
      </div>
    </div>

  </Container>

</BaseLayout>